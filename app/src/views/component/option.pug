section.option 
    h2.section__title Варианты доставки грузов из Китая
    .container 
        video(src="./videos/video.mp4" poster="./images/videoPoster.webp").option__video
        p.option__speed-watch 1x
        .option__media
            .option__media-top 
                p.option__time#start 00:00:00
                .option__duration 
                    .option__line 
                        .option__ruler
                p.option__time#end 00:00:00
            .option__media-bottom 
                i.far.option__restart
                .option__box 
                    i.far.option__prev-speed
                    i.far.option__prev
                    i.far.option__play
                    i.far.option__next
                    i.far.option__next-speed
                    .option__volume 
                        i.far.option__volume-icon.normal
                        input(type="range", name="").option__range
                i.far.option__screen

